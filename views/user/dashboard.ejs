<div id="features" class="tabs">
    <div class="container">
        <div class="row">
                <div class="col-lg-12 rsp">
                        <div class="dropdown show float-left" id="grd">
                                <a class="btn btn-secondary "  role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-ellipsis-v"></i>
                                </a>
                              
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    
                                    <%if(eventlist){%>
                                        <a class="dropdown-item" href="/dashboard" > + Create Event</a>
                                        <% eventlist.forEach(e => { %>
                                            <a class="dropdown-item" href="/dashboard/e/?id=<%=e.id%>&&q=<%=e.alias%>"><%=e.eventname%></a>
                                        <%});%>
                                        <%}%>
                                 </div>
                              </div>
                </div>

            <div class="col-lg-3">
                <nav class="nav flex-column  ">
                        <a href="/dashboard" class="nav-link px-4 ">
                            <i class="fa fa-bar-chart mr-2"></i> + Create Event
                        </a>
    
                    <%if(eventlist){%>
                        <% eventlist.forEach(e => { %>
                            <a href="/dashboard/e/?id=<%=e.id%>&&q=<%=e.alias%>" class="nav-link px-4"><%=e.eventname%></a>
                        <%});%>
                        <%}%>
                    </nav>
            </div> <!-- end of col -->
            <div class="col-lg-9">
                <%-messages('msgsuccess',locals) %>
                <h2>Create Event</h2>
                <div class="p-heading p-large">Create an event and start using the efyer app to verify your event tickets.</div>
                <div class="col-lg-6 offset-lg-3">
                
                <form action="/dashboard" method="POST">
                    <div class="form-group">
                        <label for="ename" class="col-form-label">Event Name <span class="fill">*</span></label>
                        <input type="text" class="form-control-input" name="ename"  <% if(data.ename){ %> value="<%=data.ename%>" <% } %> placeholder="enter event name">
                        <% if(errors.ename){ %><div class="help-block with-errors"><%=errors.ename%></div> <% } %>
                    </div>
                    <div class="form-group">
                        <label for="alias" class="col-form-label">Event alias <span class="fill">*</span></label>
                        <input type="text" class="form-control-input" name="alias"  <% if(data.alias){ %> value="<%=data.alias%>" <% } %> placeholder="enter alias here (5 characters maximum)" maxlength="5">
                        <% if(errors.alias){ %><div class="help-block with-errors"><%=errors.alias%></div> <% } %>
                    </div>
                    <div class="form-group">
                        <label for="sdate" class="col-form-label">Event Start Date <span class="fill">*</span></label>
                        <input type="date" class="form-control-input" name="sdate" >
                        <% if(errors.sdate){ %><div class="help-block with-errors"><%=errors.sdate%></div> <% } %>
                        <% if(wrdate){ %><div class="help-block with-errors"><%=wrdate%></div> <% } %>
                    </div>
                    <div class="form-group">
                        <label for="edate" class="col-form-label">Event End Date <span class="fill">*</span></label>
                        <input type="date" class="form-control-input" name="edate" >
                        <% if(errors.edate){ %><div class="help-block with-errors"><%=errors.edate%></div> <% } %>
                    </div>
                    <div class="form-group">
                            <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                        <button type="submit" class="form-control-submit-button">SAVE EVENT</button>
                    </div>
                    <div class="form-message">
                        <div id="cmsgSubmit" class="h3 text-center hidden"></div>
                    </div>
                </form>

            </div>
            </div>
        </div>  
    </div>
</div>


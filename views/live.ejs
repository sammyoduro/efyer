	<!-- Favicon  -->
    <link rel="icon" href="/images/favicon.png">
    <style>
    .live{
        background: #ffc107;
        border-radius: 5px;
        animation: blink 1000ms infinite alternate;
    }
    @keyframes blink {
        from{opacity: 1;}
        to{opacity: 0;}
    }
    .live a:hover{
        cursor:text;
        color:#fff !important;
    }
    </style>
</head>
<body data-spy="scroll" data-target=".fixed-top">
    
    <!-- Preloader -->
	<div class="spinner-wrapper">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
    <!-- end of preloader -->
    
    
 <!-- Navigation -->
 <nav class="navbar navbar-expand-md navbar-dark navbar-custom fixed-top">
        <a class="navbar-brand logo-image" href="/"><img src="/fimages/logo.svg" alt="efyer logo"></a>    
        <ul class="navbar-nav ml-auto">
                <li class="nav-item live">
                        <a class="nav-link " href="javascript:void(0)">LIVE</a>
                    </li>
            </ul>
</nav> <!-- end of navbar -->
<!-- end of navigation -->


<div id="features" class="tabs" style="padding-bottom: 300px;">
    <div class="container">
        <div class="row">
               
            <div class="col-lg-6 offset-lg-3">
                <%if(ticket.length>0){%> 
                    <button class="btn btn-info" id="<%=eventname.id%>" onclick="exprt(this.id)"> <i class="fa fa-file-excel"></i> csv report export</button>
                    <%}%>
                   
                    <%-messages('message',locals) %>
                <h2><%=eventname.eventname%> EVENT <br><span style="font-size: 20px;color: #ffc107;"><%if(ticket){%> #TICKETS VERIFIED ( <%=counter%> )<%}%> </span><br><span id="live-h"></span></h2>
                
                
            </div>
            <div class="col-lg-9 offset-lg-2" id="live-tag">
                <%if(ticket.length>0){%>
                    <table id="live-ticket" class='table table-striped table-dark table-hover display\'>
                            <thead>
                                <tr>
                                    <th>TICKETS</th>
                                    <th>TICKET TYPE</th>
                                    <th>TIMESTAMP</th>
                                </tr>
                            </thead>
                            <tbody>
                            <%for (let i = 0; i < ticket.length; i++) { %>
                                <% var date = new Date(ticket[i].verifiedAt) %>
                               <tr>
                                   <td>
                                    <%if (ticket[i].verificationType == 'pin') { %>
                                        BTC<%=ticket[i].ticketpin %>BTC
                                        <%}else{%>
                                            <%=ticket[i].ticketpin%>
                                        <%}%>
                                    </td>
                                    <td><%=ticket[i].verificationType%></td>
                                   <td><%=date.toDateString() %> <%= date.toLocaleTimeString()%></td>
                               </tr>
                            <%}%>
                            </tbody>
                        </table>
                        
                        <nav aria-label="Page navigation" >
        <ul class="pagination justify-content-center">
            <span class="cp" id="<%=current%>" hidden></span>
              <% if (current == 1) { %>
                  <li class="page-item disabled"><a class="page-link">First</a></li>
              <% } else { %>
                  <li class="page-item"><a class="page-link" href="/live/i/?i=<%= eventname.id%>&&q=<%= eventname.alias%>&&page=1">First</a></li>
              <% } %>
              <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %>
              <% if (i !== 1) { %>
                  <li class="page-item disabled"><a class="page-link" >...</a></li>
              <% } %>
              <% for (; i <= (Number(current) + 2) && i <= pages; i++) { %>
                  <% if (i == current) { %>
                      <li class="page-item active"><a class="page-link" ><%= i %></a></li>
                  <% } else { %>
                      <li class="page-item"><a class="page-link"  href="/live/i/?i=<%= eventname.id%>&&page=<%= i %>"><%= i %></a></li>
                  <% } %>
                  <% if (i == Number(current) + 2 && i < pages) { %>
                      <li class="page-item disabled"><a class="page-link" >...</a></li>
                  <% } %>
              <% } %>
              <% if (current == pages) { %>
                  <li class="page-item disabled"><a class="page-link">Last</a></li>
              <% } else { %>
                  <li class="page-item"><a class="page-link" href="/live/i/?i=<%= eventname.id%>&&page=<%= pages %>">Last</a></li>
              <% } %>
          </ul>
      </nav>

              <%  }%>
                            
                   
                </div> 
            <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container --> 
</div>

<!-- Footer -->
     <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="footer-col">
                            <h4>About Efyer</h4>
                            <p>Efyer is an event ticket verification app which helps event organisers and check event attendees tickets if valid or not valid.</p>
                        </div>
                    </div> <!-- end of col -->
                    <div class="col-md-4">
                        <div class="footer-col middle">
                           
                        </div>
